<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Akos"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"/>

    <!-- Card with CTA button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="1dp"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- Fake content inside card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore delicious recipes now!"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- CTA button inside card -->
            <Button
                android:id="@+id/recipesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Recipes"
                android:backgroundTint="#f15025"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- More Coming Soon Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="#ffffff"
        android:padding="24dp"
        android:elevation="1dp"
        android:layout_marginBottom="50dp"
        android:radius="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Coming Soon!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#f15025"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay tuned for exciting updates and features coming your way!"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
